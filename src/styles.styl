body {
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  font: 10px "Arial Black";
}

.actions {
  display: flex;
  width: 732px;
  justify-content: space-between;
}

.axis path {
  display: none;
}

.axis line {
  stroke-opacity: 0.3;
}

.axis text {
  font-family: "Arial Black";
  text-transform: uppercase;
  font-size: 10px
}

.x-axis line {
  stroke-dasharray: 1, 2;
  stroke-width: 1;
}

.x-axis .tick text {
  text-anchor: end;
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.region-hover {
  stroke: #000;
  stroke-width: 4px;
}

.voronoi path {
  fill: none;
  pointer-events: all;
}

.voronoi-show path {
  stroke: red;
  stroke-opacity: 0.2;
}

.root {
  display: flex;
}

//.legend {
