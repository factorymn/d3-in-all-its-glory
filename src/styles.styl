.legend-item {
  cursor: pointer;
}

.extra-options-container {
  font-size: 12px;
  margin-top: 5px;
  display: flex;
  width: 145px;
  justify-content: space-between;
  margin-left: 50px
}

.hide-all-option, .show-all-option {
  text-decoration: underline;
  cursor: pointer;
}

.hide-all-option:hover, .show-all-option:hover {
  text-decoration: none;
}

.legend-text, .legend-value {
  font-size: 12px;
}

.dot {
  stroke-width: 1px;
  stroke: white;
}
